# OpenAI API Configuration
OPENAI_API_KEY=sk-XXXXXXXX
OPENAI_MODEL=gpt-3.5-turbo-1106

# Feature Flags
# Set to "true" to use multi-agent patent analysis system with memory
# Set to "false" to use original single-agent system
USE_MULTI_AGENT_SYSTEM=false

# Model Selection (optional overrides)
# Inline suggestions: Fast, cheap completions as you type
INLINE_SUGGESTIONS_MODEL=gpt-3.5-turbo

# Patent analysis: More accurate, higher quality analysis
PATENT_ANALYSIS_MODEL=gpt-4-turbo-preview

# Visualization: Diagram generation
VISUALIZATION_MODEL=gpt-4-turbo-preview

# Mem0 Memory System Configuration - Two-Stage Architecture

# Stage 1: Unified Legal Memory (Global knowledge base)
MEM0_LEGAL_COLLECTION=unified_legal_knowledge

# Stage 2: Episodic Client Memory (Per-client personalization)
MEM0_CLIENT_COLLECTION=episodic_client_memory

# Embedding model for vector search
MEM0_EMBEDDING_MODEL=text-embedding-3-small

# LLM model for memory processing
MEM0_LLM_MODEL=gpt-4o-mini

# Enable memory persistence
ENABLE_MEMORY_PERSISTENCE=true


SEARCHAPI_API_KEY=xxxx
